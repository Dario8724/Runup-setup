<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <CheckBox
        android:id="@+id/chkTrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prefiro rotas com mais árvores 🌳"
        android:textSize="18sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/chkBeach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perto da praia 🏖️"
        android:textSize="18sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/chkHills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evitar subidas ⛰️"
        android:textSize="18sp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnGenerateRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar rota"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
